@model MultipleRowAdding.Models.Customer
@{
    ViewBag.Title = "EditCustomer";
}
<div align="center">
    <h3>Customer Management</h3>
    <br />
    <br />
    <h3>Edit Customer</h3>
    <br />
    @using (Html.BeginForm("EditCustomer", "Customers", FormMethod.Post))
    {
        @Html.HiddenFor(e => e.CustomerId)
        <table  class="table table-bordered table-striped">
            <tr>
                <td colspan="2">
                    @if (ViewBag.Failed != null)
                    {<span style="color:red;"> @ViewBag.Failed </span>}
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(e => e.CustomerName)
                </td>
                <td>
                    @Html.TextBoxFor(e => e.CustomerName) <br />
                    @Html.ValidationMessageFor(e => e.CustomerName, null, new
                    {
                        style = "color:red;"
                    })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(e => e.CustomerAddress)
                </td>
                <td>
                    @Html.TextBoxFor(e => e.CustomerAddress) <br />
                    @Html.ValidationMessageFor(e => e.CustomerAddress, null, new
                    {
                        style = "color:red;"
                    })
                </td>
            </tr>
            <tr>
                <td colspan="2"
                    align="center">
                    <br />
                    <input type="submit"
                           value="Submit" />
                </td>
            </tr>
        </table>

    }
</div>
<div class=col-12>
    @Html.ActionLink("Back to list", "Index")
</div>