@model IEnumerable<MultipleRowAdding.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h1>Product List</h1>

<p>
    @Html.ActionLink("Create New", "Create",new { },new { @class = "btn btn-success"})
</p>
@using (Html.BeginForm("Index", "Products", FormMethod.Get))
{
    //the following are search options
    
    <b> Search Option: </b>@*@Html.RadioButton("option", "ProductName") <text>Product Name</text> @Html.RadioButton("option", "ProductPrice") <text> Product Price </text>*@
     @Html.TextBox("search") <input type = "submit"
