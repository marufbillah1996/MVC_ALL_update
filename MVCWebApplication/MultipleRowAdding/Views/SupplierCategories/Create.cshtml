@model MultipleRowAdding.Models.SupplierCategory
@{
    ViewBag.Title = "Create";
}

<div align="center">
    <h3>Supplier Category Management</h3>
    <br />
    <br />
    <h3>Add Supplier Category</h3>
    <br />
    @using (Html.BeginForm("Create", "SupplierCategories", FormMethod.Post))
    {
        <table class="table table-bordered table-striped">
            <tr>
                <td colspan="2">
                    @if (ViewBag.Failed != null)
                    {<span style="color:red;"> @ViewBag.Failed </span>}
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(e => e.CatagoryName)
                </td>
                <td>
                    @Html.TextBoxFor(e => e.CatagoryName) <br />
                    @Html.ValidationMessageFor(e => e.CatagoryName, null, new
                    {
                        style = "color:red;"
                    })
                </td>
            </tr>


            <tr>
                <td colspan="2"
                    align="center">
                    <br />
                    <input type="submit"
                           value="Submit" />
                </td>
                @*<td><a href="@Url.Action("EditCustomer", "Customers", new { @CustomerId = Model.CustomerId })"> Edit </a></td>*@

                @*<td><div>@Html.ActionLink("EditCustomer", "Customers", new { @CustomerId = Model. }, new { @class = "btn btn-warning  btn-sm glyphicon glyphicon-edit" })</div></td>*@
            </tr>
        </table>

    }
</div>
<div class=col-12>
    @Html.ActionLink("Back to list", "Index")
</div>
@section scripts {
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
