@model MultipleRowAdding.Models.Supplier
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a shared layout file
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">Add Supplier</h2>
            <hr />
            @using (Html.BeginForm("Create", "Suppliers", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(e => e.SupplierName, new { @class = "control-label" })
                            @Html.TextBoxFor(e => e.SupplierName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(e => e.SupplierName, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(e => e.ContactName, new { @class = "control-label" })
                            @Html.TextBoxFor(e => e.ContactName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(e => e.ContactName, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(e => e.ContactPhone, new { @class = "control-label" })
                            @Html.TextBoxFor(e => e.ContactPhone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(e => e.ContactPhone, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(e => e.ContactEmail, new { @class = "control-label" })
                            @Html.TextBoxFor(e => e.ContactEmail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(e => e.ContactEmail, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(e => e.SupplierAddress, new { @class = "control-label" })
                            @Html.TextBoxFor(e => e.SupplierAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(e => e.SupplierAddress, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(e => e.PostalCode, new { @class = "control-label" })
                            @Html.TextBoxFor(e => e.PostalCode, new { @class = "form-control" })
                            @Html.ValidationMessageFor(e => e.PostalCode, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(e => e.SupplierCategory.CatagoryName, new { @class = "control-label" })
                            @Html.DropDownListFor(x => x.SupplierCatagoryId, new SelectList(ViewBag.supplierCategory, "SupplierCatagoryId", "CatagoryName"), "Select", new { @class = "form-control" })
                            @Html.ValidationMessageFor(e => e.SupplierCatagoryId, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script> 
}